{
  "name": "api-server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "server": "babel-node ./src/bin/www",
    "dev": "SET NODE_ENV=development&& npm-run-all server",
    "watch": "nodemon",
    "test": "SET NODE_ENV=test&& jest --verbose",
    "test:coverage": "SET NODE_ENV=test&& jest --coverage"
  },
  "dependencies": {
    "@hapi/joi": "^15.0.2",
    "config": "^3.0.1",
    "express": "~4.16.0",
    "morgan": "~1.9.0",
    "mysql": "^2.17.1",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-stage-2": "^7.0.0",
    "@babel/register": "^7.4.4",
    "@babel/runtime": "^7.4.4",
    "babel-jest": "^24.7.1",
    "babel-preset-jest": "^24.6.0",
    "jest": "^24.7.1",
    "nodemon": "^1.19.0",
    "regenerator-runtime": "^0.13.2",
    "supertest": "^4.0.2"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost:3006",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/bin/**",
      "!**/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
